{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "allowJs": true,
        "noImplicitAny": false,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2016",
            "ES2016.Array.Include",
            "ES2017",
            "ES2018",
            "ES2019"
        ],
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "**/_tests__/*",
        "**/**/**/*.spec.tsx",
        "**/**/**/*.spec.ts"
    ]
}
