{
    "name": "primary-react-components",
    "version": "1.0.6",
    "description": "A Typescript React-JSX component and CSS/SCSS library targeting Bootstrap with the intention to simplify and standardize the interaction with components",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "test": "npm run test-components",
        "test-components": "ts-mocha -p tsconfig.json src/components/**/*.spec.tsx",
        "test-docs": "ts-mocha \"./tests/docs/*.spec.js\"",
        "build": "npm run build-theme && npm run build-components",
        "build-components": "webpack --display-modules",
        "build-theme": "grunt",
        "build-patch-publish": "npm run build && npm version patch && npm publish",
        "generate-readme": "ts-node resources/readmeGenerator.tsx",
        "prepublishOnly": "npm run test"
    },
    "keywords": [
        "react",
        "bootstrap",
        "components",
        "jsx",
        "css",
        "scss"
    ],
    "peerDependencies": {
        "moment": "^2.26.0",
        "react": "^16.14.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.29",
        "@fortawesome/free-solid-svg-icons": "^5.13.1",
        "@fortawesome/react-fontawesome": "^0.1.9",
        "moment": "^2.26.0",
        "node-fetch": "^2.6.0",
        "primary-services": "^1.0.10",
        "react-textarea-autosize": "8.1.1",
        "unfetch": "^4.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
        "@babel/plugin-transform-modules-commonjs": "^7.8.3",
        "@babel/plugin-transform-react-jsx": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.9.6",
        "@babel/preset-env": "^7.8.7",
        "@babel/preset-react": "^7.8.7",
        "@babel/preset-typescript": "^7.16.5",
        "@babel/register": "^7.8.3",
        "@babel/runtime": "^7.9.6",
        "@fortawesome/fontawesome-svg-core": "^1.2.29",
        "@fortawesome/free-solid-svg-icons": "^5.13.1",
        "@fortawesome/react-fontawesome": "^0.1.9",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/expect": "^24.3.0",
        "@types/mocha": "^9.0.0",
        "@types/prop-types": "^15.7.3",
        "@types/react": "^17.0.16",
        "babel-cli": "^6.26.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-add-module-exports": "^1.0.4",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "babel-preset-env": "^1.7.0",
        "babel-register": "^6.26.0",
        "chai": "^4.2.0",
        "circular-dependency-plugin": "^5.2.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "eslint-plugin-mocha": "^7.0.0",
        "eslint-plugin-react": "^7.24.0",
        "expect": "^27.4.2",
        "grunt": "^1.0.4",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-concat": "^1.0.1",
